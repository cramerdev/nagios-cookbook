# Open file desciptors
command[check_open_fds]=<%= node['nagios']['plugin_dir'] %>/check_open_fds.sh

<% if node.recipe?('supervisor') %>
command[check_supervisorctl]=<%= node['nagios']['plugin_dir'] %>/check_supervisorctl.sh
<% else %>
command[check_supervisorctl]=<%= node['nagios']['plugin_dir'] %>/check_dummy 0 "supervisor not installed"
<% end %>

<% if node.recipe?('syslog-ng') %>
# Syslog NG
command[check_syslog-ng]=<%= node['nagios']['plugin_dir'] %>/check_procs -c 1:1 -C syslog-ng
<% else %>
command[check_syslog-ng]=<%= node['nagios']['plugin_dir']%>/check_dummy 0 "syslog-ng not installed"
<% end %>

<% if node.role?('delayed_job_server') %>
# Delayed Job
#
# We're checking for 2 here because check_procs is grepping, which is one process,
# and the actual thing, which shows up on grep as delayed_job, is actually a ruby
# process with delayed_job as the argument.
command[check_delayed_job]=<%= node['nagios']['plugin_dir'] %>/check_procs -c 2: -a delayed_job
<% end %>

<% if node.recipe?('ganglia') %>
# Ganglia
command[check_gmond]=<%= node['nagios']['plugin_dir'] %>/check_procs -c 1:1 -C gmond
<% else %>
command[check_gmond]=<%= node['nagios']['plugin_dir']%>/check_dummy 0 "gmond not installed"
<% end %>

<% if node.recipe?('ganglia::web2') %>
command[check_gmetad]=<%= node['nagios']['plugin_dir'] %>/check_procs -c 1:1 -C gmetad
<% else %>
command[check_gmetad]=<%= node['nagios']['plugin_dir']%>/check_dummy 0 "gmetad not installed"
<% end %>

<% if node.recipes.include?("chef-server::rubygems-install") || node.recipes.include?("couchdb") %>
# Couch DB
command[check_couchdb]=<%= node['nagios']['plugin_dir'] %>/check_http -H localhost -p 5984 -s '"couchdb":"Welcome"'
<% end %>
