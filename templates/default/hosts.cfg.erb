# Generated by Chef
# host definitions

<% @nodes.each do |n| -%>
define host {
  use server
  address <%= (n[:cloud] || {})[:local_ipv4] || n[:ipaddress] %>
  host_name <%= n[:fqdn] %>
<% if (n.roles || []).empty? -%>
  hostgroups all
<% else -%>
  hostgroups <%= n.roles.to_a.join(",") %>
<% end -%>
}

<% end -%>
